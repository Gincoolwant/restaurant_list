<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="margin-top: -100px;">
        <h2 class="text-center">Register</h2>
        <form action="/users/register" method="post">
          <div class="mb-3">
            <label class="mb-3" for="name">Name</label>
            <input type="name" class="form-control" name="name" id="email" placeholder="Please enter Name"
              value="{{ name }}">
          </div>
          <div class="mb-3">
            <label class="mb-3" for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Please enter Email"
              value="{{ email }}">
          </div>
          <div class="mb-3">
            <label class="mb-3" for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password"
              placeholder="Please enter Password" value="{{ password }}">
          </div>
          <div class="mb-3">
            <label class="mb-3" for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
              placeholder="Please enter Password again" value="{{ confirmPassword }}">
          </div>
          <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Register</button>
            <div class="text-center">or</div>
            <a href="/auth/facebook" class="btn btn-info">Facebook Login</a>
          </div>
        </form>
        <p class="lead mt-4">
          Let's go <a href="/users/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>